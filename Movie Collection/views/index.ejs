<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .banner-section {
            width: 100%;
            height: 100vh;
            background: url('/images/banner.webp');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            position: relative;
        }
        .banner-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            top: 50px;
        }
        .banner-content a {
            display: inline-block;
            background: rgb(0, 123, 255);
            color: white;
            padding: 12px 24px;
            font-size: 18px;
            border-radius: 5px;
            text-decoration: none;
            transition: 0.3s;
            font-weight: bold;
            margin-top: 99px;
        }
        .banner-content a:hover {
            background: rgb(0, 92, 190);
        }
        .container {
            width: 80%;
            margin: 20px auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding-top: 20px;
        }
        .card {
            width: 250px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            margin: 15px;
            padding: 15px;
            text-align: center;
        }
        .card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
        }
        .delete-btn,
        .update-btn {
            display: inline-block;
            margin-top: 10px;
            padding: 8px;
            width: 100px;
            text-align: center;
            border-radius: 4px;
            text-decoration: none;
            color: white;
        }
        .delete-btn {
            background: rgb(186, 96, 218);
        }
        .update-btn {
            background: rgb(0, 123, 255);
        }
    </style>
</head>
<body>
    <div class="banner-section">
        <div class="banner-content">
            <a href="/form">Add Movie</a>
        </div>
    </div>

    <div class="container">
        <% movies.forEach(movie=> { %>
            <div class="card">
                <img src="<%= movie.poster %>" alt="<%= movie.name %>">
                <h3>
                    <%= movie.name %>
                </h3>
                <p>Genre: <%= movie.genre.join(', ') %></p>
                <p>Release: <%= movie.release %></p>
                <p>Director: <%= movie.director %></p>
                <a href="/edit/<%= movie._id %>" class="update-btn">Update</a>
                <a href="/delete/<%= movie._id %>" class="delete-btn">Delete</a>
            </div>
        <% }); %>
    </div>
</body>
</html>