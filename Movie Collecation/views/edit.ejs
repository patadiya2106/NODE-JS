<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Movie Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #0f0f0f;
            color: #fff;
            font-family: 'Segoe UI', sans-serif;
            padding-top: 50px;
        }

        .movie-form {
            max-width: 600px;
            margin: auto;
            background: #1c1c1c;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 25px rgba(255, 0, 0, 0.1);
        }

        .movie-form h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #e50914;
        }

        .form-control,
        .form-select {
            background-color: #2a2a2a;
            border: none;
            color: white;
        }

        .form-control::placeholder {
            color: #aaa;
        }

        .form-control:focus,
        .form-select:focus {
            box-shadow: 0 0 5px #e50914;
            border-color: #e50914;
        }

        .form-select option {
            color: #000;
        }

        .btn-red {
            background-color: #bb111a;
            color: white;
            border: none;
        }

        .btn-red:hover {
            background-color: #b0060f;
        }
        .poster-preview {
            margin-top: 10px;
            border-radius: 10px;
            max-height: 200px;
        }
    </style>
</head>
<body>

<div class="movie-form">
    <h2>Edit Movie</h2>
    <form action="/edit/<%= records._id %>" method="POST" enctype="multipart/form-data">
        <!-- Title -->
        <div class="mb-3">
            <label class="form-label">Movie Title</label>
            <input type="text" class="form-control" name="movieTitle" placeholder="Enter movie title"
                   value="<%= records.movieTitle %>">
        </div>

        <!-- Director -->
        <div class="mb-3">
            <label class="form-label">Director</label>
            <input type="text" class="form-control" name="directorName" placeholder="Enter director name"
                   value="<%= records.directorName %>">
        </div>

        <!-- Year -->
        <div class="mb-3">
            <label class="form-label">Release Year</label>
            <input type="number" class="form-control" name="releaseYear" placeholder="e.g., 2024"
                   value="<%= records.releaseYear %>">
        </div>

        <!-- Genre -->
        <div class="mb-3">
            <label class="form-label">Genre</label>
            <select class="form-select" name="Genre">
                <option value="">Select Genre</option>
                <% let genres=["Action", "Thriller", "Horror", "Romance", "Drama"]; %>
                <% genres.forEach((genre)=> { %>
                    <option value="<%= genre %>" <%= records.Genre === genre ? 'selected' : '' %>>
                        <%= genre %>
                    </option>
                <% }); %>
            </select>
        </div>

        <!-- Poster -->
        <div class="mb-3">
            <label class="form-label">Movie Poster</label>
            <input type="file" class="form-control" name="avatar">
            <% if (records.avatar) { %>
                <img src="/<%= records.avatar %>" class="poster-preview" alt="Current Poster">
            <% } %>
        </div>

        <button type="submit" class="btn btn-red w-100 mt-3">Update Movie</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
