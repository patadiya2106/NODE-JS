<%- include('header') %>
<style>
  .card {
    margin-top: 100px;
    margin-left: 100px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    margin-bottom: 30px;
  }

  .card-header {
    background-color: #f7f7f7;
    border-bottom: 1px solid #ddd;
    padding: 20px;
    font-size: 18px;
    font-weight: bold;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    font-weight: 600;
    color: #333;
  }

  .form-control {
    border-radius: 8px;
    padding: 12px;
    font-size: 16px;
    background-color: #f8f9fa;
    border: 1px solid #ccc;
  }

  .btn-success {
    width: 100%;
    padding: 12px;
    font-size: 16px;
    background-color: #337ab7;
    border: none;
    border-radius: 8px;
    color: white;
    cursor: pointer;
  }

  .btn-success:hover {
    background-color: #337ab7;
  }

  .card-body {
    padding: 30px;
  }
</style>

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Change Password</div>
                    </div>
                    <div class="card-body">
                        <form action="/changemypassword" method="post">
                            <div class="form-group">
                                <label for="oldpassword">Old Password</label>
                                <input type="password" class="form-control" id="oldpassword" name="oldpassword" placeholder="Enter your old password" required />
                            </div>
                            <div class="form-group">
                                <label for="newpassword">New Password</label>
                                <input type="password" class="form-control" id="newpassword" name="newpassword" placeholder="Enter new password" required />
                            </div>
                            <div class="form-group">
                                <label for="confimpassword">Confirm Password</label>
                                <input type="password" class="form-control" id="confimpassword" name="confimpassword" placeholder="Confirm your new password" required />
                            </div>
                            <div class="card-action">
                                <button class="btn btn-success" type="submit">Change Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('footer') %>