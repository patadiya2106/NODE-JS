                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% records.map((data, index) => { %>
                                        <tr>
                                            <td><%= index + 1 %></td>
                                            <td><%= data.fname %></td>
                                            <td><%= data.lname %></td>
                                            <td><%= data.email %></td>
                                            <td><%= data.password %></td>
                                            <td><%= data.gender %></td>
                                            <td><%= data.hobby %></td>
                                            <td><%= data.city %></td>
                                            <td><%= data.desc %></td>
                                            <td><img src="../<%= data.avatar %>" height="80px"></td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
