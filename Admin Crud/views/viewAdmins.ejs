<%- include('header') %>
<div class="d-flex">
    <div class="container" style="margin-left: 250px; padding-top: 90px;">
        <div class="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header" style="margin: 10px 0;">
                            <div class="card-title">View Admin Data</div>
                        </div>
                        <div class="card-body">
                            <% if(currentAdmin.email == "rahulpatadiya07@gmail.com"){  %>
                                <% if (records.length === 0) { %>
                                    <h4 class="text-center text-danger">No admins added yet.</h4>
                                <% } else { %>
                                <table class="table table-bordered mt-3">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Email</th>
                                            <th>Password</th>
                                            <th>Gender</th>
                                            <th>Hobby</th>
                                            <th>City</th>
                                            <th>Description</th>
                                            <th>Image</th>
                                            <th colspan="2">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% records.map((data, index) => { %>
                                        <tr>
                                            <td><%= index + 1 %></td>
                                            <td><%= data.fname %></td>
                                            <td><%= data.lname %></td>
                                            <td><%= data.email %></td>
                                            <td><%= data.password %></td>
                                            <td><%= data.gender %></td>
                                            <td><%= data.hobby %></td>
                                            <td><%= data.city %></td>
                                            <td><%= data.desc %></td>
                                            <td><img src="../<%= data.avatar %>" height="80px"></td>
                                            <td><a href="/updateAdmin?id=<%= data._id %>" class="btn btn-success btn-sm">Update</a></td>
                                            <td><a href="/delete-addmin/<%= data.id %>" class="btn btn-danger btn-sm">Delete</a></td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
