<%- include('../header') %>

    <div class="page-wrapper">
        <div class="page-breadcrumb py-3 px-4 bg-light border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">view Category</h4>

            </div>
        </div>

        <div class="container-fluid py-4" style="margin-left: 300px; margin-top: 100px;">

            <!-- Category Cards Section -->
            <div class="row mt-4">
                <% if (records.length> 0) { %>
                    <% records.forEach(function(category) { %>
                        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                            <div class="panel panel-default shadow-sm">
                                <div class="panel-body text-center">
                                    <img src="../<%= category.c_image %>" alt="Category Image"
                                        class="img-responsive img-thumbnail"
                                        style="height: 100%; width: 100%; object-fit: cover;">
                                    <h5 class="mt-2">
                                        <%= category.c_title %>
                                    </h5>
                                </div>
                                <div class="panel-footer text-center">
                                    <a href="/category/editCategoryPage?id=<%= category._id %>"
                                        class="btn btn-sm btn-primary">
                                        <i class="fa fa-pencil"></i>
                                    </a>

                                    <a href="/category/deleteCategory/<%= category._id %>" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Are you sure?')">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <div class="col-12 text-center">
                                    <p class="text-muted">No categories found.</p>
                                </div>
                                <% } %>
            </div>

        </div>
    </div>

    <%- include('../footer') %>