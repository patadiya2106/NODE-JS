<%- include('../header') %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <% if (success && success.length> 0) { %>
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: '<%= success %>',
                confirmButtonColor: '#28a745'
            });
        </script>
        <% } %>

            <% if (error && error.length> 0) { %>
                <script>
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: '<%= error %>',
                        confirmButtonColor: '#dc3545'
                    });
                </script>
                <% } %>

                    <div class="page-wrapper" style="margin-left: 280px; ">
                        <div class="container-fluid py-5" style="height: 570px; ">
                            <div class="row">
                                <div class="col-12">
                                    <div class="card shadow rounded" style="margin-top: 100px;">
                                        <div class="card-body">
                                            <h5 class="card-title mb-4">Product Data</h5>

                                            <div class="table-responsive">
                                                <table class="table table-bordered align-middle text-center">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Product Name</th>
                                                            <th>Category</th>
                                                            <th>SubCategory</th>
                                                            <th>ExtraCategory</th>
                                                            <th>Old Price</th>
                                                            <th>Price</th>
                                                            <th>Description</th>
                                                            <th>Stock</th>
                                                            <th>Image</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% allProducts.map((data, index)=> { %>
                                                            <tr>
                                                                <th>
                                                                    <%= ++index %>
                                                                </th>
                                                                <td>
                                                                    <%= data.product_name %>
                                                                </td>
                                                                <td>
                                                                    <%= data.category_id.c_title %>
                                                                </td>
                                                                <td>
                                                                    <%= data.subcategory_id.subcategory_title %>
                                                                </td>
                                                                <td>
                                                                    <% if (data.extracategory_id) { %>
                                                                        <%= data.extracategory_id.extraCategory_title %>
                                                                            <% } else { %>
                                                                                N/A
                                                                                <% } %>

                                                                </td>
                                                                <td>₹<%= data.old_price %>
                                                                </td>
                                                                <td>₹<%= data.product_price %>
                                                                </td>
                                                                <td style="max-width: 200px;">
                                                                    <%= data.product_desc %>
                                                                </td>
                                                                <td>
                                                                    <%= data.product_stock %>
                                                                </td>
                                                                <td>
                                                                    <img src="/<%= data.product_image %>?v=<%= Date.now() %>"
                                                                        alt="Product Image" height="80"
                                                                        style="object-fit: cover; max-width: 100px;">

                                                                </td>
                                                                <td>
                                                                    <div class="d-flex justify-content-center">
                                                                        <a href="/product/updateProductpage/<%= data.id %>"
                                                                            style="color: green;" class="me-2">
                                                                            <button
                                                                                class="btn btn-success">Edit</button>
                                                                        </a>
                                                                        <a href="/product/deleteProduct/<%= data.id %>"
                                                                            style="color: red;">
                                                                            <button
                                                                                class="btn btn-danger">Delete</button>
                                                                        </a>
                                                                    </div>
                                                                </td>

                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <%- include('../footer') %>