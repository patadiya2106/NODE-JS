<%- include('../header') %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <% if (success && success.length> 0) { %>
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: '<%= success %>',
                confirmButtonColor: '#28a745'
            });
        </script>
        <% } %>
            <% if (error && error.length> 0) { %>
                <script>
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: '<%= error %>',
                        confirmButtonColor: '#dc3545'
                    });
                </script>
                <% } %>

                    <style>
                        .custom-form-box {
                            background: #fff;
                            border-radius: 20px;
                            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
                            padding: 40px 35px;
                            max-width: 700px;
                            margin: 100px auto;
                            border-left: 6px solid #337ab7;
                        }

                        .custom-form-box h3 {
                            font-weight: 700;
                            color: #337ab7;
                            margin-bottom: 35px;
                            text-align: center;
                        }

                        .form-label {
                            font-weight: 600;
                            color: #333;
                            margin-bottom: 8px;
                            display: block;
                        }

                        .form-control,
                        .form-select {
                            border-radius: 10px;
                            padding: 12px 16px;
                            border: 1px solid #ced4da;
                            transition: all 0.2s ease-in-out;
                            box-shadow: inset 0 0 3px rgba(0, 0, 0, 0.05);
                        }

                        .form-control:focus,
                        .form-select:focus {
                            border-color: #337ab7;
                            box-shadow: 0 0 0 0.2rem rgba(51, 122, 183, 0.25);
                        }

                        .btn-primary {
                            border-radius: 10px;
                            padding: 10px 30px;
                            font-weight: 600;
                            font-size: 16px;
                            margin-top: 20px;
                        }

                        .text-end {
                            text-align: right;
                        }

                        @media (max-width: 768px) {
                            .custom-form-box {
                                margin: 40px 15px;
                                padding: 30px 20px;
                            }
                        }
                    </style>

                    <div class="page-wrapper" style="min-height: 100vh;">
                        <div class="container-fluid">
                            <div class="custom-form-box">
                                <h3>Update Extra Category</h3>
                                <form method="POST"
                                    action="/extracategory/editExtraCategory/<%= updateExtraCategory._id %>">
                                    <!-- Category Dropdown -->
                                    <div class="mb-4">
                                        <label class="form-label">Select Category</label>
                                        <select class="form-select" name="category_id" required>
                                            <option value="">-- Choose Category --</option>
                                            <% allCategory.forEach(category=> { %>
                                                <option value="<%= category._id %>"
                                                    <%=category._id.toString()===updateExtraCategory.category_id.toString()
                                                    ? 'selected' : '' %>>
                                                    <%= category.c_title %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>

                                    <!-- SubCategory Dropdown -->
                                    <div class="mb-4">
                                        <label class="form-label">Select SubCategory</label>
                                        <select class="form-select" name="subCategory_id" required>
                                            <option value="">-- Choose SubCategory --</option>
                                            <% allSubCategory.forEach(subcategory=> { %>
                                                <option value="<%= subcategory._id %>"
                                                    <%=subcategory._id.toString()===updateExtraCategory.subCategory_id.toString()
                                                    ? 'selected' : '' %>>
                                                    <%= subcategory.subcategory_title %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>

                                    <!-- Extra Category Title -->
                                    <div class="mb-4">
                                        <label class="form-label">Extra Category Title</label>
                                        <input type="text" class="form-control" name="extraCategory_title"
                                            value="<%= updateExtraCategory.extraCategory_title %>"
                                            placeholder="Enter Extra Category Title" required />
                                    </div>

                                    <!-- Submit Button -->
                                    <div class="text-end">
                                        <button type="submit" class="btn btn-primary">Update Extra Category</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <%- include('../footer') %>