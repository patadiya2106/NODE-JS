<%- include('../header') %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Flash Messages -->
    <% if (success && success.length> 0) { %>
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: '<%= success %>',
                confirmButtonColor: '#28a745'
            });
        </script>
        <% } %>
            <% if (error && error.length> 0) { %>
                <script>
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: '<%= error %>',
                        confirmButtonColor: '#dc3545'
                    });
                </script>
                <% } %>

                    <!-- Custom Styling -->
                    <style>
                        .custom-form-box {
                            background: #fff;
                            border-radius: 16px;
                            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
                            padding: 35px 30px;
                            max-width: 650px;
                            margin-left: 280px;
                            border-left: 6px solid #007bff;
                        }

                        .custom-form-box h3 {
                            font-weight: 700;
                            color: #007bff;
                            margin-bottom: 25px;
                            text-align: center;
                        }

                        .form-label {
                            font-weight: 600;
                            color: #333;
                            margin-bottom: 8px;
                            display: block;
                        }

                        .form-control,
                        .form-select {
                            border-radius: 8px;
                            padding: 10px 14px;
                            border: 1px solid #ced4da;
                            box-shadow: inset 0 0 2px rgba(0, 0, 0, 0.05);
                            transition: all 0.2s ease-in-out;
                            width: 100%;
                        }

                        .form-control:focus,
                        .form-select:focus {
                            border-color: #007bff;
                            box-shadow: 0 0 0 0.15rem rgba(0, 123, 255, 0.25);
                        }

                        .btn-success {
                            border-radius: 8px;
                            padding: 10px 24px;
                            font-weight: 600;
                        }

                        @media (max-width: 768px) {
                            .custom-form-box {
                                padding: 25px 20px;
                                margin: 20px 10px;
                            }
                        }

                        .mt {
                            margin: 10px;
                        }
                    </style>

                    <!-- Page Wrapper -->
                    <div class="page-wrapper" style="height: 100vh;">
                        <div class="container-fluid">
                            <div class="custom-form-box mt-5" style="margin-top: 100px;">
                                <h3>Add New Extra Category</h3>
                                <form method="POST" action="/extracategory/insertextracategory">

                                    <!-- Category Dropdown -->
                                    <div class="mb-4">
                                        <label class="form-label mt">Select Category</label>
                                        <select class="form-select" name="category_id" required>
                                            <option value="">-- Choose Category --</option>
                                            <% allCategory.forEach(category=> { %>
                                                <option value="<%= category._id %>">
                                                    <%= category.c_title %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>

                                    <!-- SubCategory Dropdown -->
                                    <div class="mb-4">
                                        <label class="form-label mt">Select SubCategory</label>
                                        <select class="form-select" name="subCategory_id" required>
                                            <option value="">-- Choose SubCategory --</option>
                                            <% allSubCategory.forEach(subcategory=> { %>
                                                <option value="<%= subcategory._id %>">
                                                    <%= subcategory.subcategory_title %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>

                                    <!-- Extra Category Title -->
                                    <div class="mb-4">
                                        <label class="form-label mt">Extra Category Title</label>
                                        <input type="text" class="form-control" name="extraCategory_title"
                                            placeholder="Enter Extra Category Title" required />
                                    </div>

                                    <!-- Submit Button -->
                                    <div class="text-end mt">
                                        <button type="submit" class="btn btn-primary"> Add Extra Category
                                        </button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>

                    <%- include('../footer') %>